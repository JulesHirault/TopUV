<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.if26.topuv"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/actionbarlogo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Actionbarstyle" >
        <activity
            android:name="com.if26.topuv.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CategoriesActivity"
            android:label="@string/activity_categories">
        </activity>
        <activity
            android:name=".activities.ListActivity"
            android:label="@string/activity_list_uv">
        </activity>
        <activity
            android:name=".activities.SearchActivity"
            android:label="@string/activity_search">
        </activity>
        <activity
            android:name=".activities.TabActivity"
            android:label="@string/app_name">
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
