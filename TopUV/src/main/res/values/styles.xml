<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Actionbarstyle" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Actionbarstyle</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Actionbarstyle</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_actionbarstyle</item>
    </style>

    <style name="ActionBar.Solid.Actionbarstyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_actionbarstyle</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_actionbarstyle</item>
    </style>

    <style name="ActionBarTabStyle.Actionbarstyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_actionbarstyle</item>
    </style>


</resources>
